{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "jsxImportSource": "@satorijs/element",
    "types": [
      "node",
      "jest",
      "yml-register/types"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "tests"
  ]
}